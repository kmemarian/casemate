#!/usr/bin/env bash
srcdir=$(cd "$(dirname "$0")"; pwd)
rootdir=$(cd "${srcdir}/../.."; pwd)
libdir=$(cd "${rootdir}/src/lib"; pwd)

cat <<EOF > config.mk
# Auto-generated, see ./configure script.
SRCDIR = ${srcdir}
ROOTDIR = ${rootdir}
LIBDIR = ${libdir}
CC = clang
LD = ld
CFLAGS = -I${libdir}/include/ -I${srcdir}/include/ -g -gdwarf-4
EOF