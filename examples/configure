#!/usr/bin/env bash
srcdir=$(cd "$(dirname "$0")"; pwd)
rootdir=$(cd "${srcdir}/.."; pwd)
libdir=$(cd "${rootdir}/src/lib"; pwd)

cat <<EOF > config.mk
# Auto-generated, see ./configure script.
ROOTDIR = ${rootdir}
LIBDIR = ${libdir}
SRCDIR = ${srcdir}
EXPECTEDDIR = ${srcdir}/expected
CC = clang
LD = ld
CFLAGS = -I${libdir}/include/ -I${srcdir} -g -gdwarf-4
EOF